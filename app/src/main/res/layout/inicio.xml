<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".Inicio">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Titulo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="No Estas Sola APP"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-black"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btnSalir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:background="#FF0000"
            android:drawableTint="@color/white"
            android:text="Salir" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/saludo"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/white"
            android:text="Hola : "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/nombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnEnviarSms"
            android:layout_width="238dp"
            android:layout_height="145dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#673AB7"
            android:text="ENVIAR SMS DE ALERTA"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="293dp" />

        <ImageView
            android:layout_width="124dp"
            android:layout_height="116dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:src="@drawable/logo" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="90dp"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/ly_inicio"
            android:layout_width="78dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imghome"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/inicio" />

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Inicio"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_perfil"
            android:layout_width="78dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgperfil"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/perfil" />

            <TextView
                android:id="@+id/tv_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Perfil"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="78dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgcirculo"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/amistad" />

            <TextView
                android:id="@+id/tv_circulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Amigos"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgemergencia"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/emergencias" />

            <TextView
                android:id="@+id/tv_emergencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Emergencia"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>